# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Database - PostgreSQL
DB_NAME=foodordering_db
DB_USER=postgres
DB_PASSWORD=your-secure-database-password
DB_HOST=localhost
DB_PORT=5432

# Redis
REDIS_URL=redis://localhost:6379/0
CHANNEL_LAYERS_BACKEND=channels_redis.core.RedisChannelLayer
CHANNEL_LAYERS_CONFIG={"defaults":{"BACKEND":"channels_redis.core.RedisChannelLayer","CONFIG":{"hosts":[("127.0.0.1",6379)]}}}

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_LIFETIME=15minutes
JWT_REFRESH_TOKEN_LIFETIME=1day
JWT_ALGORITHM=HS256

# Encryption Key for Fernet (Phone, Address encryption)
# Generate using: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
FERNET_ENCRYPTION_KEY=your-fernet-key-here

# OTP Settings
OTP_SECRET_KEY=your-otp-secret-key
OTP_ISSUER_NAME=FoodDeliveryApp
OTP_VALIDITY_WINDOW=4

# Stripe Settings
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_API_VERSION=2023-10-16

# Google Maps API Key
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Email Settings (SMTP)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-app-password

# Rate Limiting
RATE_LIMIT_DEFAULT=100/hour
RATE_LIMIT=20_ANONYMOUS/hour

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/foodordering/app.log

# Security
CSRF_COOKIE_SECURE=True
SESSION_COOKIE_SECURE=True
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
